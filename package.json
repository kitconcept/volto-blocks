{
  "name": "@kitconcept/volto-blocks",
  "version": "1.2.0",
  "description": "kitconcept Volto Blocks",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/eslint/bin/eslint.js 'src/**/*.{js,jsx}'",
    "lint:fix": "./node_modules/eslint/bin/eslint.js --fix 'src/**/*.{js,jsx}'",
    "prettier": "node_modules/prettier/bin-prettier.js --single-quote src/**/*.{js,jsx,ts,tsx,json,md} --check",
    "prettier:fix": "node_modules/prettier/bin-prettier.js --single-quote --write src/**/*.{js,jsx,ts,tsx,json,md}",
    "ci:lint": "./node_modules/eslint/bin/eslint.js -f checkstyle 'src/**/*.{js,jsx}' > eslint.xml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitconcept/volto-blocks.git"
  },
  "keywords": [
    "Volto",
    "Block",
    "ReactJS",
    "Plone"
  ],
  "author": "kitconcept, GmbH",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kitconcept/volto-blocks/issues"
  },
  "homepage": "https://github.com/kitconcept/volto-blocks#readme",
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.overrides",
        "options": {
          "parser": "less"
        }
      }
    ]
  },
  "dependencies": {
    "deep-freeze": "0.0.1",
    "react-beautiful-dnd": "10.1.0",
    "react-slick": "0.25.2",
    "slick-carousel": "1.8.1"
  },
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-plugin-prettier": "3.0.1",
    "prettier": "1.19.1"
  }
}
