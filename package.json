{
  "name": "@kitconcept/volto-blocks",
  "version": "3.0.0",
  "description": "kitconcept Volto Blocks",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint 'src/**/*.{js,jsx}'",
    "lint:fix": "./node_modules/.bin/eslint --fix 'src/**/*.{js,jsx}'",
    "lint:ci": "./node_modules/.bin/eslint -f checkstyle 'src/**/*.{js,jsx}' > eslint.xml",
    "prettier": "./node_modules/.bin/prettier --single-quote src/**/*.{js,jsx,ts,tsx,json,md} --check",
    "prettier:fix": "./node_modules/.bin/prettier --single-quote --write src/**/*.{js,jsx,ts,tsx,json,md}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitconcept/volto-blocks.git"
  },
  "keywords": [
    "Volto",
    "Block",
    "ReactJS",
    "Plone"
  ],
  "author": "kitconcept GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kitconcept/volto-blocks/issues"
  },
  "homepage": "https://github.com/kitconcept/volto-blocks#readme",
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.overrides",
        "options": {
          "parser": "less"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "deep-freeze": "0.0.1",
    "react-color": "2.19.3",
    "react-slick": "0.25.2",
    "slick-carousel": "1.8.1"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "3.1.3",
    "jest-junit": "8.0.0",
    "prettier": "2.0.5",
    "stylelint": "13.3.3",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2"
  }
}
