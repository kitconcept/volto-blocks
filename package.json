{
  "name": "@kitconcept/volto-blocks",
  "version": "5.0.0",
  "description": "kitconcept Volto Blocks",
  "main": "index.js",
  "scripts": {
    "prettier": "make prettier",
    "lint": "make lint",
    "stylelint": "make stylelint",
    "test": "make test",
    "cypress:open": "../../../node_modules/cypress/bin/cypress open",
    "cypress:start-frontend": "cd ../../../ && RAZZLE_API_PATH=http://localhost:55001/plone yarn start",
    "ci:cypress:run": "make cypress",
    "ci:cypress": "start-test ci:test-acceptance-server http-get://localhost:55001/plone ci:cypress:run",
    "ci:test-acceptance-server": "make test-acceptance-server",
    "cy:test:fixture:setup": "node cypress/support/reset-fixture.js",
    "cy:test:fixture:teardown": "node cypress/support/reset-fixture.js teardown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitconcept/volto-blocks.git"
  },
  "keywords": [
    "Volto",
    "Block",
    "ReactJS",
    "Plone"
  ],
  "author": "kitconcept GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kitconcept/volto-blocks/issues"
  },
  "homepage": "https://github.com/kitconcept/volto-blocks#readme",
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.overrides",
        "options": {
          "parser": "less"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "deep-freeze": "0.0.1",
    "react-color": "2.19.3",
    "react-slick": "0.25.2",
    "slick-carousel": "1.8.1"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "3.1.3",
    "jest-junit": "8.0.0",
    "prettier": "2.0.5",
    "stylelint": "13.3.3",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2"
  }
}
