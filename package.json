{
  "name": "@kitconcept/volto-blocks",
  "version": "7.0.0",
  "description": "kitconcept Volto Blocks",
  "main": "src/index.js",
  "addons": [
    "volto-slate:minimalDefault,simpleLink"
  ],
  "scripts": {
    "i18n": "rm -rf build/messages && NODE_ENV=production node src/i18n.js",
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "prettier": "prettier --single-quote --check 'src/**/*.{js,jsx,ts,tsx,json}'",
    "stylelint": "stylelint 'src/**/*.{css,less}'",
    "test": "(cd project && NODE_PATH=node_modules RAZZLE_JEST_CONFIG=../jest-addon.config.js yarn test ../src)",
    "cypress:open": "NODE_ENV=production cypress open",
    "cypress:run": "NODE_ENV=production CYPRESS_RETRIES=2 cypress run",
    "cypress:start-frontend": "cd project && RAZZLE_API_PATH=http://localhost:55001/plone yarn start",
    "ci:cypress": "start-test ci:test-acceptance-server http-get://localhost:55001/plone ci:start-frontend",
    "ci:test-acceptance-server": "make test-acceptance-server",
    "ci:start-frontend": "cd project && RAZZLE_API_PATH=http://localhost:55001/plone yarn build && start-test start:prod http://localhost:3000 'cd .. && yarn cypress:run'",
    "cy:test:fixture:setup": "node cypress/support/reset-fixture.js",
    "cy:test:fixture:teardown": "node cypress/support/reset-fixture.js teardown",
    "dry-release": "release-it --dry-run",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitconcept/volto-blocks.git"
  },
  "keywords": [
    "Volto",
    "Block",
    "ReactJS",
    "Plone"
  ],
  "author": "kitconcept GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kitconcept/volto-blocks/issues"
  },
  "homepage": "https://github.com/kitconcept/volto-blocks#readme",
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.overrides",
        "options": {
          "parser": "less"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    }
  },
  "release-it": {
    "hooks": {
      "before:bump": "yarn i18n",
      "after:bump": "node changelogupdater.js bump ${version}",
      "after:release": "node changelogupdater.js back ${version} && git commit -am 'Back to development' && git push"
    },
    "git": {
      "changelog": "node changelogupdater.js excerpt",
      "requireUpstream": false,
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true,
      "releaseName": "${version}",
      "releaseNotes": "node changelogupdater.js excerpt"
    },
    "npm": {
      "publish": false
    }
  },
  "dependencies": {
    "deep-freeze": "0.0.1",
    "node-jq": "1.12.0",
    "react-color": "2.19.3",
    "react-slick": "0.25.2",
    "slick-carousel": "1.8.1",
    "volto-slate": "2.7.0"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "3.1.3",
    "jest-junit": "8.0.0",
    "prettier": "2.0.5",
    "release-it": "14.7.0",
    "start-server-and-test": "^1.12.5",
    "stylelint": "13.3.3",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2"
  },
  "peerDependencies": {
    "@plone/volto": ">=12.0.0"
  }
}
